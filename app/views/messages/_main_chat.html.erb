<div class="chat-header">
  <div class="chat-room-name">hogefuga</div>
  <div class="close-chat">
    <a href="#">チャットを終了する</a>
  </div>
</div>
<div class="chat-room">

  <div class="chat-message">
    <div class="upper-message">
      <div class="message-name">Tom</div>
      <div class="message-time">2020/3/31(Wed) 12:43:30</div>
    </div>
    <div class="lower-message">
      <div class="message-text">おはよう</div>
    </div>
  </div>

  <div class="chat-message">
    <div class="upper-message">
      <div class="message-name">Tom</div>
      <div class="message-time">2020/3/31(Wed) 12:47:30</div>
    </div>
    <div class="lower-message">
      <div class="message-text">こんばんは</div>
    </div>
  </div>

</div>

<%= form_with model: [@room, @message], class: 'chat-form', local: true do |f| %>
  <div class="form-left">
    <%= f.text_field :content, class: 'form-text', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <div class="form-right">
    <%= f.submit '送信', class: 'send-btn' %>
  </div>
<% end %>